<% guides.each do |name, list| %>
  <h3 class="group"><%= name %></h3>

  <dl>
    <% list.each do |guide| %>
      <dt><%= guide_link(guide) %></dt>
      <dd class="clearfix">
        <% if guide["construction"] %>
          <img src="images/graphics/notes.png" />
        <% end %>
        <p><%= guide["text"] %></p>
      </dd>
    <% end %>
  </dl>
<% end %>

