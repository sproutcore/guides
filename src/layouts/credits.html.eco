    <div id="feature">
      <div class="wrapper">
        <div class="feature_header">
          <a href="/"><img src="images/graphics/credits.png"></a>
          <h2><a href="/credits.html">Credits</a></h2>
          <p>We'd like to thank the following people for their tireless efforts.</p>
        </div>
        <div class="feature_sidebar">
          <a href="index.html" id="guidesMenu">
            Guides Index <span id="guidesArrow">&#9656;</span>
          </a>
          <div id="guides" class="clearfix" style="display: none;">
            <a href="index.html" class="guidesMenu">
              Guides Index <span class="guidesArrow">&#9662;</span>
            </a>
            <hr style="clear:both;">
            <dl class='L'>
              <%- @document.printIndexDropdownSection(@document, 'Views') %>
            </dl>
            <dl class='R'>
              <%- @document.printIndexDropdownSection(@document, 'Testing') %>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <div id="container">
      <div class="wrapper">
        <div id="mainCol">
          <div class='headerSection'>
            <h2><%- @document.sc_title %></h2>
          </div>

          <% for index, section of @document.sc_credits: %>
            <h3 class='section'><%= section.name %></h3>

            <!-- TODO: Sort Authors by Last Name //-->
            <% for index, author of @document.sortBy(section.authors, ['lname', 'fname']): %>
              <div class='author clearfix' id='<%= author.github %>'>
                <img alt='<%= author.fname %> <%= author.lname %>' class='left pic credits-avatar' src='<%= @document.avatarFor(author.github) %>' />
                <h3><%= author.fname %> <%= author.lname %></h3>
                <p><i class='icon-github'></i> <a href='http://github.com/<%= author.github %>'><%= author.github %></a></p>
              </div>
            <% end %>
          <% end %>
        </div>
        <!-- TODO: re-add index_items //-->
        <div id="subCol">
          <h3>Become a Contributor</h3>
          <ul class='links'>
            <li><a href='/style_guide.html'>Javascript Style Guide</a></li>
            <li><a href='/commit_code.html'>Committer Guidelines</a></li>
            <li><a href='/documentation_guidelines.html'>Documentation Guidelines</a></li>
          </ul>
        </div>
      </div>
    </div>

